{
  "compilerOptions": {
    "target": "ES2019",                        
    "module": "CommonJS",                      
    "rootDir": "./src",                        
    "outDir": "./dist",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                      
    "moduleResolution": "node",                
    "resolveJsonModule": true,                 
    "allowSyntheticDefaultImports": true       
  },
  "include": ["src"],                          
  "exclude": ["node_modules", "dist"]          
}
