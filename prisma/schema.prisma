generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  status    String   @default("To Do")
  progress  Int      @default(0)
  invoice   Int      @default(0)
  startDate String?
  endDate   String?
  deadline  String?
  priority  String   @default("Medium")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model SelectionProject {
  id        Int      @id @default(autoincrement())
  name      String
  status    String   @default("Pending")
  startDate String?
  endDate   String?
  manager   String?
  budget    Float    @default(0)
  pdfUrl    String?
  pdfName   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("selection_projects")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  role       String   @default("Staff")
  lastActive String?
  status     String   @default("Inactive")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model Admin {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  about       String?
  workAssign  String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("admins")
}

