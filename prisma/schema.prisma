generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model Project {
  id         Int      @id @default(autoincrement())
  name       String
  status     String
  progress   Int
  invoice    Int
  startDate  DateTime
  endDate    DateTime
  deadline   DateTime
  priority   String
}

model Manager {
  id        Int      @id @default(autoincrement())
  name      String
  project   String
  status    String
  startDate DateTime
  endDate   DateTime
  budget    Int
  pdfFile   String?
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  role        String
  lastActive  DateTime
  status      String
}